doctype html
html
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title #{titulo}
    link(rel='stylesheet', href='/bootstrap/css/bootstrap.min.css')
    link(rel='stylesheet', href='/css/style.css')
    script(src='/js/jquery-3.2.1.js')
    script(src='/bootstrap/js/bootstrap.min.js')
    script(src='/chart/code/highcharts.js')
    script(src='/chart/code/modules/exporting.js')
  body
    nav(class='navbar navbar-expand-lg navbar-dark bg-primary')
      a(class='navbar-brand',href='#') Administración
      button(class='navbar-toggler',type='button',data-toggle='collapse', data-target='#navbarColor01',aria-controls='navbarColor01',aria-expanded='false', aria-label='Toggle navigation')
        span(class='navbar-toggler-icon')
      div(class='collapse navbar-collapse',id='navbarColor01')
        ul(class='navbar-nav mr-auto')
          li(class='nav-item active')
            a(class='nav-link',href='/') Inicio
              span(class='sr-only') (current)
          li(class='nav-item dropdown')
            a(class='nav-link dropdown-toggle',data-toggle='dropdown',href='#',id='themes') Categorias 
              span(class='caret')
            div(class='dropdown-menu' aria-labelledby='categorias')
              a(class='dropdown-item',href='/administracion/productos') Productos
              a(class='dropdown-item',href='/administracion/proveedores') Proveedores
              a(class='dropdown-item',href='/administracion/usuarios') Usuarios
          li(class='nav-item')
            a(class='nav-link',href='/administracion/estadisticas') Estadísticas
        ul(class='nav navbar-nav navbar-right')
          li(class='nav-item dropdown')
            a(class='nav-link dropdown-toggle',href='#',id='cuenta',data-toggle='dropdown', aria-haspopup='true',aria-expanded='false') #{usuario_logeado}
              span(class='caret')
            div(class='dropdown-menu dropdown-menu-right',aria-labelledby='cuenta')
              a(class='dropdown-item',href='/administracion/cuenta/cambiarusuario') Cambiar usuario
              a(class='dropdown-item',href='/administracion/cuenta/cambiarclave') Cambiar clave
              div(class='dropdown-divider')
              a(class='dropdown-item',href='/administracion/salir') Salir

    div(class='container-fluid',style='margin-top: 50px')
      if mensaje_exito
        div(class='alert alert-info alert-dismissible')
          button(class='close',data-dismiss='alert',aria-label='Close')
            span(aria-hidden='true') &times;
          span #{mensaje_exito}
      if mensaje_error
        div(class='alert alert-danger alert-dismissible')
          button(class='close',data-dismiss='alert',aria-label='Close')
            span(aria-hidden='true') &times;
          span #{mensaje_error}
      block content
    div(class='main')
    footer(class='footer')
      div(class='container text-white')
      br
      p(class='text-center') Copyright &copy; Ismael Heredia 2019